
<div class="col-auto align-self-center">
    <div class="row justify-content-between">
        <div class="col-auto">
            <Blazorise.Badge Class="@CardModel.BgColor">@CardModel.Rarity</Blazorise.Badge>
        </div>
        <div class="col-auto">
            @if (CardModel.CardIsNew)
            {
                <Blazorise.Badge Class="bg-warning">NEW</Blazorise.Badge>
            }
            <Blazorise.Badge Class="bg-info" Pill="true">@($"x{CardModel.Count}")</Blazorise.Badge>
        </div>
    </div>
    <div @onclick=@(() => OnOpenUrlInNewTabAsync(CardModel.CardInfo.CardInfoUrl))>
        <Blazorise.Image Source="@CardModel.CardInfo.ImageUrl" Style="width: 150px" />
    </div>
</div>