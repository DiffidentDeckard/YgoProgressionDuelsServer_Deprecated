@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>Create a new account</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="alert alert-warning" role="alert">
                <p>
                    <strong>Email and UserName cannot be changed after registration</strong>
                </p>
            </div>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.AvatarUrl"></label>
                <input asp-for="Input.AvatarUrl" class="form-control" />
                <img src="@Model.Input.AvatarUrl" height="100" />
                <span asp-validation-for="Input.AvatarUrl" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <p>TODO: Create my own image and put it here (maybe)</p>
            <p>Or just remove it</p>
            <img src="https://i.pinimg.com/originals/3a/3d/4e/3a3d4ef7516081f8572097f1cf8a2106.jpg" width="500" />
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
